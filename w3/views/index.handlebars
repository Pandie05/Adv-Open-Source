<h1>Create Employee</h1>

{{#if error}}
  <p>{{error}}</p>
{{/if}}

<form action="/employees" method="POST">
  <div>
    <label>First Name</label>
    <input name="firstName" type="text" required value="{{form.firstName}}" />
  </div>

  <div>
    <label>Last Name</label>
    <input name="lastName" type="text" required value="{{form.lastName}}" />
  </div>

  <div>
    <label>Department</label>
    <select name="department" required>
      <option value="" disabled {{#unless form.department}}selected{{/unless}}>Choose</option>
      {{#each departments}}
        <option value="{{this}}" {{#ifEquals this ../form.department}}selected{{/ifEquals}}>{{this}}</option>
      {{/each}}
    </select>
  </div>

  <div>
    <label>Start Date</label>
    <input name="startDate" type="date" required value="{{form.startDate}}" />
  </div>

  <div>
    <label>Job Title</label>
    <input name="jobTitle" type="text" required value="{{form.jobTitle}}" />
  </div>

  <div>
    <label>Salary</label>
    <input name="salary" type="number" min="0" step="1" required value="{{form.salary}}" />
  </div>

  <button type="submit">Create</button>
</form>
